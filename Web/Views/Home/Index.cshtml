@model  IList<DataAccess.Model.Categoria>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
<div class="col-md-12">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>Nome</tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td><a href="/Home/Editar/@item.Id" class="btn">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

</div>
